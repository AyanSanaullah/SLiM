# Database
DB_URL=postgresql://user:password@localhost:5432/ai_routing

# Redis
REDIS_URL=redis://localhost:6379/0

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Model Configuration
BASE_SLM_MODEL=local-base-model
ROUTER_FORCE_LLM=false
ROUTER_DISABLE_SLM=false

# Repetition Detection
REPETITION_SIM_THRESHOLD=0.90

# sLM Configuration
SLM_MODE=local
SLM_ENDPOINT_URL=
SLM_AUTH_BEARER=
SLM_TIMEOUT_MS=3000

# Cache & Storage
CACHE_TTL_SEC=3600
STORE_RAW_TEXT=true

# Logging
LOG_LEVEL=INFO